<Window x:Class="NodeGraph.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NodeGraph"
        mc:Ignorable="d"
        Title="节点编辑器" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button x:Name="btnCreateFloat" Content="创建Float节点" Margin="5" Padding="5" Click="btnCreateFloat_Click"/>
            <Button x:Name="btnCreateAdd" Content="创建Add节点" Margin="5" Padding="5" Click="btnCreateAdd_Click"/>
            <Button x:Name="btnCreatePrint" Content="创建Print节点" Margin="5" Padding="5" Click="btnCreatePrint_Click"/>
            <Button x:Name="btnRun" Content="运行" Margin="5" Padding="5" Click="btnRun_Click"/>
        </StackPanel>
        
        <Canvas x:Name="nodeCanvas" Grid.Row="1" Background="#FF2D2D2D">
            <!-- 节点将在这里动态添加 -->
        </Canvas>
    </Grid>
</Window>
